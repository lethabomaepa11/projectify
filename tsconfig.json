{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler", // or "node" if you're not using a bundler like Vite/esbuild
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "noImplicitAny": false, // TODO: change to true after first successful build
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, // silenced for now
    "noUnusedParameters": false, // silenced for now
    "outDir": "dist",
    "rootDir": "src", // moved inside compilerOptions (was outside!)
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "typeRoots": ["typings", "node_modules/@types"] // moved inside compilerOptions (was outside!)
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.mjs",
    "**/tests",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ],
  "include": ["src", "typings"]
}
